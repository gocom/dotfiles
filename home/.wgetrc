# Use cookies if needed.
cookies = on

# Add accept headers so that some servers treat us a bit better.
header = Accept: text/html,application/xhtml+xml,application/xml;q=0.9,image/webp,*/*;q=0.8
header = Accept-Language: en-us,en;q=0.8

# Load cookies from a file.
load-cookies = ~/.wget-cookies

# Follow redirections.
max-redirect = 30

# Disable netrc so that we don't send plain-text passwords to some untrusted
# servers by accident in case some ftp daemon accidentally creates one.
netrc = off

# Avoid looking for grass that doesn't exist. It might not be green, but at least
# we can get some.
prefer-family = IPv4

# Timmy is a real boy. No machines here, just human fingers and reload buttons.
random-wait = on

# We don't want to download the whole internet; or do we?
reclevel = 5

# Use safer filenames than the defaults.
restrict-file-names = ascii

# Maximum number of retries.
tries = 10

# Fedoras off and set user-agent to appear like we a real browser.
user-agent = Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/57.0.2987.133 Safari/537.36

# Default wait time between requests to save servers.
wait = 5

# Wait between retries.
waitretry = 15
