#!/usr/bin/env bash

app_name="${0##*/}"
app_version="0.0.0"

usage () {
  cat <<EOF
Open files and directories.

Usage:
  $ $app_name [options]

Options:
  -h, --help     Print this message
  -v, --version  Print version number

Example:
  $ $app_name somefile.txt
EOF
}

main () {
  if [ "$#" -eq 0 ]; then
    set -- "."
  fi

  if [ "$(command -v xdg-open)" ]; then
    exec xdg-open "$@"
    exit "$?"
  fi

  if [ "$(command -v explorer.exe)" ]; then
    explorer.exe "$(wslpath -aw "$@")"
    exit 0
  fi

  if ! [[ "${OSTYPE:-}" =~ "darwin" ]] && [ "$(command -v gio)" ]; then
    exec gio open "$@"
    exit "$?"
  fi

  if [ -x "/usr/bin/open" ]; then
    exec /usr/bin/open "$@"
    exit "$?"
  fi

  echo "No 'open' handler available." >&2
  exit 1
}

case "${1:-}" in
  -h|--help) usage ;;
  -v|--version) echo "$app_version" ;;
  *) main "$@" ;;
esac
