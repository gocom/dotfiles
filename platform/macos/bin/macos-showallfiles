#!/usr/bin/env bash

usage () {
  cat <<EOF
Toggle visibility of hidden files and terminates Finder session.

Note that since macOS Sierra, you can instead use a keyboard shortcut in Finder:
  âŒ˜ + SHIFT + .

Usage:
  $ ${0##*/} [options] [hide|reload|show|toggle]

Options:
  -h, --help     Print this message
  -v, --version  Print version number

Commands:
  $ ${0##*/} hide
  Hide hidden files.

  $ ${0##*/} reload
  Relaunch Finder process.

  $ ${0##*/} show
  Show hidden files.

  $ ${0##*/} toggle
  Toggle visibility.

Example:
  $ ${0##*/} toggle
  $ ${0##*/} reload
EOF
}

visible () {
  local status
  status="$(defaults read com.apple.finder AppleShowAllFiles 2> /dev/null)"

  if [ "$status" -eq 1 ] || [ "$status" = "YES" ]; then
    return 0
  fi

  return 1
}

show () {
  defaults write com.apple.finder AppleShowAllFiles YES
}

hide () {
  defaults write com.apple.finder AppleShowAllFiles NO
}

toggle () {
  if [ "$(visible)" ]; then
    hide
  else
    show
  fi
}

reload () {
  killall Finder
}

case "${1:-}" in
  -v|--version) echo "0.0.0" ;;
  hide) hide ;;
  reload) reload ;;
  show) show ;;
  toggle) toggle ;;
  *) usage ;;
esac
